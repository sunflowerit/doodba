[Unit]
Description=odoo
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/odoo
ExecStart=/home/ubuntu/odoo/.venv/bin/python /home/ubuntu/odoo/.venv/bin/odoo --logfile /home/ubuntu/odoo/logfile/odoo.log -c /home/ubuntu/odoo/auto/odoo.conf
KillMode=mixed

[Install]
WantedBy=multi-user.target
